#include <iostream>
 using namespace std;
int main() {
    int choice, sum, sub, mul, div;
    cout << "Select an operation:" << endl;
    cout << " 1. Addition" << endl
         << " 2. Subtraction" << endl
         << " 3. Multiplication" << endl
         << " 4. Division" << endl;


    cout << "Enter your choice: ";
    cin >> choice;

    int num1, num2;
    cout << "enter 1st number: ";
    cin >> num1;
    cout << "enter 2nd number: ";
    cin >> num2;

    switch(choice) {
        case 1:
          sum = num1 + num2;
          cout <<" Sum is: " << sum << endl;
          break;
        case 2:
          sub = num1 - num2;
          cout << " Subtraction is: " << sub << endl;
          break;
          case 3:
          mul = num1 * num2;
          cout << " Multiplication is: " << mul << endl;
          break;
          case 4:
          if (num2 == 0) {
              cout << "Error: Division by zero will tend to infinity. " << endl;
              break;
            }
          div = num1 / num2;
          cout << " Division is: " << div << endl;

            break;
        default:
            cout << " Invalid choice!" << endl;
    }

    cout << "Thank you for using the calculator!" << endl;

    return 0;
}


